// Custom styles.
// 主页文章添加阴影效果 
.post { 
    margin-top: 60px; 
    margin-bottom: 60px; 
    padding: 25px; 
    -webkit-box-shadow: 0 0 5px rgba(202, 203, 203, .5); 
    -moz-box-shadow: 0 0 5px rgba(202, 203, 204, .5); 
}
// 鼠标样式
* {
    cursor: url("https://raw.githubusercontent.com/yongnights/yongnights.github.io/hexo/themes/next/source/img/mouse.ico"),auto!important
}
:active {
    cursor: url("https://raw.githubusercontent.com/yongnights/yongnights.github.io/hexo/themes/next/source/img/mouseHandKid.ico"),auto!important
}
